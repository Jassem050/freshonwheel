<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:clipToPadding="false"
    app:ignore="NamespaceTypo">


    <RelativeLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />


        <RelativeLayout
            android:id="@+id/imagelayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/item_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:foregroundGravity="left"
                android:scaleType="centerCrop"
                android:src="@drawable/delcab" />


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/font"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imagelayout">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_10"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/maven_pro"
                    android:maxLines="1"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:textStyle="bold" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/item_weight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="#352F2F"
                        android:textSize="12.5sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:textStyle="bold"
                        android:text="-"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat"
                        android:text="â‚¹"
                        android:textColor="#352F2F" />

                    <TextView
                        android:id="@+id/item_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/maven_pro"
                        android:textStyle="bold"
                        android:textColor="#352F2F" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat"
                        android:text="min: "
                        android:textColor="@color/main_green_stroke_color" />

                    <TextView
                        android:id="@+id/item_min_weight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/maven_pro"
                        android:textStyle="bold"
                        android:textColor="#352F2F" />


                </LinearLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/weight_layout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                    android:layout_width="95dp"
                    android:layout_height="wrap_content">

                    <AutoCompleteTextView
                        android:id="@+id/weight_dropdown"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:textSize="9sp"
                        android:editable="false"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/add_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="bottom">


            <ProgressBar

                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/item_progress"
                android:gravity="bottom" />



            <LinearLayout
                android:id="@+id/btn_layout"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_10"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/minus_btn"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:text="-"
                    android:textColor="#fff"
                    card_view:srcCompat="@drawable/ic_minus_btn" />


                <TextView
                    android:id="@+id/item_selected_qty_txtview"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/montserrat"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textColor="#352F2F"
                    android:textSize="16sp"
                    android:textStyle="bold" />


                <ImageView
                    android:id="@+id/plus_btn"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:text="+"
                    android:textColor="#fff"

                    card_view:srcCompat="@drawable/ic_add" />


            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/remove_btn"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:visibility="gone"
                android:text="Remove"/>

            <TextView
                android:id="@+id/no_stock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="out of stock"
                android:layout_marginRight="@dimen/margin_10"
                android:layout_below="@+id/remove_btn"
                android:visibility="gone"
                android:textColor="@color/red_btn_bg_color"/>

        </RelativeLayout>


    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/main"
        android:layout_margin="@dimen/margin_5"
        android:background="@color/divider_color" />


</RelativeLayout>